{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "pretty": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "types": ["node"] // This includes Node.js types
  },
  "include": ["types/**/*", "lib/**/*.ts", "server.ts"], // Include the relevant directories and files
  "exclude": ["node_modules"],
  "files": ["types.d.ts"] 
}
