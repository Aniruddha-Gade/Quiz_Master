{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "pretty": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node"] 
  },
  "include": ["types/**/*", "lib/**/*.ts", "server.ts"],
  "exclude": ["node_modules"]
}
