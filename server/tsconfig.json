{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",                                
    "jsx": "react-jsx", 
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true,                                
    "typeRoots": ["./node_modules/@types", "./types"],
    "moduleResolution": "node",
    "resolveJsonModule": true, // Enable this if you import .json files
    "baseUrl": "./", // Optional, for setting up path aliases
    "paths": { /* Add path aliases if necessary */ },
    "outDir": "./dist" // Optional, for specifying output directory
  }
}
