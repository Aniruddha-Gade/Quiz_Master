{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "pretty": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "types": ["node"]
  },
  "include": ["types/**/*", "lib/**/*.ts"], // This includes all TypeScript files in the specified directories
  "exclude": ["node_modules"], // Exclude node_modules from compilation
  "files": ["types.d.ts"] // Include specific declaration file
}
